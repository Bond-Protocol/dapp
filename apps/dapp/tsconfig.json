{
  "extends": "tsconfig/vite.json",
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "paths": {
      "components/*": [
        "src/components/*"
      ],
      "components": [
        "src/components/index"
      ],
      "context/*": [
        "src/context/*"
      ],
      "context": [
        "src/context/index"
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "pages": [
        "src/pages/index"
      ],
      "services/*": [
        "src/services/*"
      ],
      "services": [
        "src/services/index"
      ],
      "hooks/*": [
        "src/hooks/*"
      ],
      "hooks": [
        "src/hooks/index"
      ],
      "utils/*": [
        "src/hooks/*"
      ],
      "utils": [
        "src/hooks/index"
      ],
      "assets/*": [
        "src/assets/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
