{
  "extends": "tsconfig/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "src",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "hooks/*": [
        "./hooks/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "assets": [
        "./assets/index"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/main.d.ts",
  ],
  "exclude": [
    "dist",
    "src/stories/**/*",
    "build",
    "node_modules"
  ]
}
